<h1>Listing accounts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Contact name</th>
    <th>Contact email</th>
    <th>Rate</th>
    <th>Creation date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @accounts.each do |account| %>
  <tr>
    <td><%= account.name %></td>
    <td><%= account.contact_name %></td>
    <td><%= account.contact_email %></td>
    <td><%= account.rate %></td>
    <td><%= account.creation_date %></td>
    <td><%= link_to 'Show', account %></td>
    <td><%= link_to 'Edit', edit_account_path(account) %></td>
    <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

