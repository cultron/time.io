<!-- Logged out header -->
<% if user_signed_in? %>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">Time.io</a>
          <div class="nav-collapse collapse">
            <p class="navbar-text pull-right">
              <%= link_to destroy_user_session_path, :method => :delete do %>
                <button type="button" class="btn btn-danger">Logout</button>
              <% end %>
            </p>
            <ul class="nav">
              <% if current_page?(:controller => 'accounts', :action => 'index') %>
                <li><%= link_to("Accounts", accounts_path, :class => "active" ) %></li>
              <% else %>
                  <li><%= link_to("Accounts", accounts_path) %></li>
              <% end %>

              <% if current_page?(:controller => 'invoices', :action => 'index') %>
                <li><%= link_to("Invoices", invoices_path, :class => "active" ) %></li>
              <% else %>
                <li><%= link_to("Invoices", invoices_path) %></li>
              <% end %>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
<% else %>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#">Time.io</a>
        </div>
      </div>
    </div>
<% end %>

