<!-- Logged out header -->
<% if user_signed_in? %>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">Time.io</a>
          <div class="nav-collapse collapse">
            <p class="navbar-text pull-right">
              <%= link_to "Logout", destroy_user_session_path, :method => :delete, :style => "text-decoration: none;" %>
            </p>
            <ul class="nav">
              <li class="dropdown">
              <% if current_page?(:controller => 'accounts', :action => 'index') %>
                <%= link_to  accounts_path, :class => "dropdown-toggle active", "data-toggle" => "dropdown" do %>
                  Accounts <b class="caret"></b>
                <% end %>
              <% else %>
                <%= link_to  accounts_path, :class => "dropdown-toggle", "data-toggle" => "dropdown" do %>
                    Accounts <b class="caret"></b>
                <% end %>
              <% end %>
                <ul class="dropdown-menu">
                  <% @accounts.each do |account| %>
                     <li><%= link_to account.name, account_path(account) %></li>
                  <% end %>
                     <li><%= link_to "Add Account", new_account_path %></li>
                </ul>
              </li>

              <% if current_page?(:controller => 'invoices', :action => 'index') %>
                <li><%= link_to("Invoices", invoices_path, :class => "active" ) %></li>
              <% else %>
                <li><%= link_to("Invoices", invoices_path) %></li>
              <% end %>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
<% else %>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">Time.io</a>
        </div>
      </div>
    </div>
<% end %>

