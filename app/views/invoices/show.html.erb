<p id="notice"><%= notice %></p>

<div class="row-fluid">
  <div class="span6">
    <div class="row">
      <h3>Matt Cullerton</h3>
      <p>1026 Glen Arbor Dr, Encinitas, CA 92024</p>
      <p>Phone: 703-795-1529</p>
    </div>
    <div class="row">
      <p>To: <%= @invoice.account.contact_name %></p>
      <p><%= @invoice.account.name %></p>
      <p><%= @invoice.account.contact_email %></p>
    </div>
  </div>
  <div class="span6">
