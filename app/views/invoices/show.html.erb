  <table class="table table-bordered">
    <tr>
      <th>Description</th>
      <th>Hours</th>
      <th>Date</th>
      <th>Amount</th>
    </tr>

    <tr>
       <td colspan="3">Total:</td>
       <td><%= BigDecimal(@invoice.time_entries.sum(:hours) * @invoice.account.rate).to_s  %></td>
    </tr>
    </table>
</div>
<p>
  <b>Issued:</b>
  <%= @invoice.issued %>
</p>

<p>
  <b>Issued date:</b>
